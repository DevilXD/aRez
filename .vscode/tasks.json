{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Documentation",
            "type": "shell",
            "command": "make html",
            "problemMatcher": [],
            "options": {
                "cwd": "./docs"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
        },
        {
            "label": "Show Documentation",
            "type": "shell",
            "command": "view",
            "problemMatcher": [],
            "dependsOn": ["Build Documentation"],
            "options": {
                "cwd": "./docs"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Show Coverage Report",
            "type": "shell",
            "command": "coverage report --rcfile=coverage.ini --skip-covered",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
