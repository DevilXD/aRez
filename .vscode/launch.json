{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Legacy Test File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\tests.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "-x"]
        },
        {
            "name": "Run Tests - Fast",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "-x", "-m", "not slow",]
        },
        {
            "name": "Run Coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "-x",
                "--cov=arez",
                "--cov-branch",
                "--cov-config=coverage.ini",
                "--cov-report=xml:coverage.xml",
            ]
        },
        {
            "name": "Run Coverage - Fast",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "-x",
                "-m",
                "not slow",
                "--cov=arez",
                "--cov-append",
                "--cov-branch",
                "--cov-config=coverage.ini",
                "--cov-report=xml:coverage.xml",
            ]
        },
        {
            "name": "Lint with MyPy",
            "type": "python",
            "request": "launch",
            "module": "mypy",
            "args": [
                "-p",
                "arez",
                "--no-implicit-optional",
                "--check-untyped-defs",
                "--disallow-any-generics",
                "--warn-redundant-casts",
                "--warn-unused-ignores",
                "--show-error-codes"
            ]
        }
    ]
}